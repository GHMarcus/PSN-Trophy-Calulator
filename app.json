{
    "expo": {
        "name": "TrophyCalculator",
        "slug": "TrophyCalculator",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./src/assets/icons/appIcons/icon.png",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "scheme": "TrophyCalc",
        "ios": {
            "bundleIdentifier": "mgo.nbg.psncalc",
            "supportsTablet": false
        },
        "android": {
            "package": "mgo.nbg.psncalc",
            "adaptiveIcon": {
                "foregroundImage": "./src/assets/icons/appIcons/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true
        },
        "web": {
            "favicon": "./src/assets/icons/appIcons/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "backgroundColor": "#232323",
                    "image": "./src/assets/icons/appIcons/splash-icon.png",
                    "dark": {
                        "backgroundColor": "#000000"
                    },
                    "imageWidth": 200
                }
            ]
        ]
    }
}
